tmux_conf_theme_status_left_fg='#282a36,#f8f8f2,#e4e4e4'  # black, white , white
tmux_conf_theme_status_left_bg='#50fa7b,#6272a4,#44475a'  # yellow, pink, white blue
tmux_conf_theme_status_left_attr='bold,none,none'

# status right style
tmux_conf_theme_status_right_fg='#f8f8f2,#f8f8f2,#282a36' # light gray, white, black
tmux_conf_theme_status_right_bg='#44475a,#6272a4,#bd93f9' # dark gray, red, white
tmux_conf_theme_status_right_attr='none,none,bold'

# pairing indicator
tmux_conf_theme_pairing='üëì '          # U+1F453
tmux_conf_theme_pairing_fg='none'
tmux_conf_theme_pairing_bg='none'
tmux_conf_theme_pairing_attr='none'

## Custom Config Options ---- 
## 

tmux_conf_theme_status_left=' #{username}@#{hostname} | #(uname -r) | Ôåî '
tmux_conf_theme_status_right='üíª #{cpu_icon} #{cpu_percentage} @ üî• #{cpu_temp}, üêè #{ram_icon} #{ram_percentage} |üî∫#{uptime_d}d #{uptime_h}h | üïõ %a %b %d %I:%M %p '

# Other Plugins
set -g @plugin 'ChanderG/tmux-notify'
set -g @plugin 'tmux-plugins/tmux-cpu'

# Custom Keybindings
bind -n M-h select-pane -L
bind -n M-j select-pane -D 
bind -n M-k select-pane -U
bind -n M-l select-pane -R

bind-key -n C-h previous-window
bind-key -n C-l next-window
bind-key -n C-t new-window
bind-key -n C-t new-window -c "#{pane_current_path}"

bind-key -n M-0 select-window -t 0
bind-key -n M-1 select-window -t 1
bind-key -n M-2 select-window -t 2
bind-key -n M-3 select-window -t 3
bind-key -n M-4 select-window -t 4
bind-key -n M-5 select-window -t 5
bind-key -n M-6 select-window -t 6
bind-key -n M-7 select-window -t 7
bind-key -n M-8 select-window -t 8
bind-key -n M-9 select-window -t 9

bind '"' split-window -c "#{pane_current_path}"
bind % split-window -h -c "#{pane_current_path}"

# TERM Variable
set -g default-terminal "xterm-256color"

# Misc. options
set -g @dracula-cpu-usage true
set-option -g status-position top
set -g mouse on
